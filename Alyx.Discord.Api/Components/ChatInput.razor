@code {
    private bool _enabled = true;
    [Parameter] public EventCallback OnButtonPressed { get; set; }

    private Task PressButtonAsync()
    {
        _enabled = false;
        InvokeAsync(StateHasChanged);
        return OnButtonPressed.InvokeAsync();
    }

}