@page "/LabeledButton"

<div class="labeled-button @CreatePositionClass()">
    <button class="@CreatePositionClass()">@ChildContent</button>
    <img src="img/Arrow3.webp" alt="Arrow pointing towards button description label." class="@CreatePositionClass()"/>
    <div class="description @CreatePositionClass()">@ArrowLabel</div>
</div>


@code {
    [Parameter] public RenderFragment ChildContent { get; set; } = default!;

    [Parameter] public Direction ArrowDirection { get; set; } = Direction.Left;

    [Parameter] public required string ArrowLabel { get; set; }

    public enum Direction
    {
        Left,
        Right
    }

    private string CreatePositionClass()
    {
        return ArrowDirection is Direction.Left
            ? "top-left"
            : "bottom-right";
    }

}